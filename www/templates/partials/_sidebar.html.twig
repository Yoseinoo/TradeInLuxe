					<span class="sidebarNotification" id="targetNotification">{{notifications}}</span>
				{% endif %}
				<svg {% if current is defined and current == 'echanges' %} class="current" {% endif %} width="35" height="35" fill="none" stroke="#ffffff" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
