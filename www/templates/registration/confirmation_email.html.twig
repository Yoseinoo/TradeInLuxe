{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="mb-4">Bonjour !</h1>

		<p class="mt-3">
			Veuillez confirmer votre adresse e-mail en cliquant sur le lien suivant :</p>
		<a class="btn btn-primary" href="{{ signedUrl|raw }}">Confirmer mon email</a>
		<p>Ce lien expirera dans
			{{ expiresAtMessageKey|trans(expiresAtMessageData, 'VerifyEmailBundle') }}.</p>

		<p>A bientot !</p>
	</div>
{% endblock %}
